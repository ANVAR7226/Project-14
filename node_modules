<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Секундомер</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: Arial, sans-serif;
        }
        #timer {
            font-size: 48px;
            font-weight: bold;
            margin-bottom: 20px;
        }
        button {
            font-size: 20px;
            padding: 10px 20px;
            margin: 5px;
            cursor: pointer;
        }
        #reset {
            display: none;
            background-color: red;
            color: white;
        }
    </style>
</head>
<body>

    <div id="timer">00:00:00</div>
    <button id="startStop">Старт</button>
    <button id="reset">Сброс</button>

    <script>
        let time = 0; // Время в секундах
        let isRunning = false;
        let interval;

        function formatTime(seconds) {
            const hrs = String(Math.floor(seconds / 3600)).padStart(2, "0");
            const mins = String(Math.floor((seconds % 3600) / 60)).padStart(2, "0");
            const secs = String(seconds % 60).padStart(2, "0");
            return `${hrs}:${mins}:${secs}`;
        }

        function updateTimer() {
            document.getElementById("timer").innerText = formatTime(time);
            document.getElementById("reset").style.display = time > 0 ? "inline-block" : "none";
        }

        document.getElementById("startStop").addEventListener("click", function () {
            if (isRunning) {
                clearInterval(interval);
                this.innerText = "Старт";
            } else {
                interval = setInterval(() => {
                    time++;
                    updateTimer();
                }, 1000);
                this.innerText = "Стоп";
            }
            isRunning = !isRunning;
        });

        document.getElementById("reset").addEventListener("click", function () {
            clearInterval(interval);
            time = 0;
            isRunning = false;
            updateTimer();
            document.getElementById("startStop").innerText = "Старт";
        });

        updateTimer(); // Обновить таймер при загрузке
    </script>

</body>
</html>
